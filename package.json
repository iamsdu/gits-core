    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4",
    "husky": "^6.0.0"
  },
  "files": [
    "dist"
  ]
}
